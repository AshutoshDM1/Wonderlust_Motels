<% layout('/layouts/boilerplate') -%>
<body>
  <div class="massage_box">
    <div class="massage">
      Are Yoy Feeling? Lusty !! Then WonderLust is for You !
    </div>
  </div>
  <h3 class="massage">Your All Listings</h3>
  <div class="main">
    <div class="cards_container">
      <% for(let listing of allListings) { %>
      <a class="Card_link" href="/listings/<%=listing.id %>">
        <div class="card">
          <img
            style="
              height: 40vh;
              border-bottom-left-radius: 0px;
              border-bottom-right-radius: 0px;
            "
            src="<%=listing.image.url%>"
            class="card-img-top"
            alt="<%=listing.title%>"
          />
          <div class="card-body">
            <h5 class="card-title"><%=listing.title%></h5>
            <b class="card-text">Price : $ <%=listing.price%></b>
            <p class="card-text"><%=listing.description%></p>
            <a href="#" class="btn btn-primary">Check</a>
          </div>
        </div>
      </a>
      <% }%>
    </div>
  </div>
</body>
